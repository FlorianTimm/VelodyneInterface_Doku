% Creates an enumerate or an itemize environment within a multicols environment,
% aligning items in one row at the same height.
% You may access
%  \begin{mcolenum}{}{}
%  \end{mcolenum}
%  \begin{mcolitem}{}{}
%  \end{mcolitem}
% from this document.
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mcolenum}[2010/11/16]
\RequirePackage{multicol}
\newenvironment{mcolenum}[2]{%
 \begin{multicols}{#1}\begin{enumerate}\def\makelabel##1{\hss\llap{\vphantom{#2}##1}}%
}{%
 \end{enumerate}\end{multicols}%
}
\newenvironment{mcolitem}[2]{%
 \begin{multicols}{#1}\begin{itemize}\def\makelabel##1{\hss\llap{\vphantom{#2}##1}}%
}{%
 \end{itemize}\end{multicols}%
}
